
  <h3>Books</h3>
  <table>
  	<div>
	  	<tr>
	  	  	<th>Title</th>
	  	  	<th>Body</th>
	  	  	<th></th>
	  	  	<th></th>
	  	  	<th></th>
	  	</tr>
	    <% @books.each do |book| %>
	  		<tr>
		  		<td><%= book.title %></td>
		  		<td><%= book.body %></td>
			  	<td><%= link_to 'Show', book_path(book.id),class:"show_#{book}" %></td>
			  	<td><%= link_to 'edit', edit_book_path(book.id),class:"edit_#{book}" %></td>
			  	<td><%= link_to 'Destroy', books_path,class:"destroy_#{book}" %></td>
	  		</tr>
	  	<% end %>
	</div>
  </table>

  <h3>New book</h3>

<%= form_for(@book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title, class:"book_title" %>

  <h4>body</h4>
  <%= f.text_area :body, class:"book_body" %>

  <%= f.submit 'Create Book' %>

<% end %>
